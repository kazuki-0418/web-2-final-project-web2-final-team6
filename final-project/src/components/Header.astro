---
import { Image } from "astro:assets";
import ddsgnr from "../assets/logos/ddsgnr.png";
---

<header>
  <nav>
    <Image src={ddsgnr} alt="Logo" width={130.6} />
    <div class="desktop_links">
      <a href="/">Home</a>
      <a href="/about-us">About</a>
      <a href="/services">Services</a>
      <a href="/teams">Teams</a>
      <a href="/contact">Contact</a>
      <button class="request_quote">Request A Quote</button>
    </div>
    <div class="hamburger_menu" id="hamburger">
      <span class="line line1"></span>
      <span class="line line2"></span>
      <span class="line line3"></span>
    </div>
  </nav>
  <div class="dropdown_menu" id="dropdown">
    <div class="links">
      <a href="/">Home</a>
      <a href="/about-us">About</a>
      <a href="/services">Services</a>
      <a href="/teams">Teams</a>
      <a href="/contact">Contact</a>
      <button class="request_quote">Request A Quote</button>
    </div>
    <div class="informations">
      <div><strong>For emergency cases: 567 123 45 67</strong></div>
      <div>Location: 121 Wallstreet Street, NY , USA</div>
      <div>Open hours: 9.00-24.00 Mon-Sat</div>
      <div>Email:info@ddsgnr.com</div>
    </div>
  </div>
</header>
<script>
  const btn = document.querySelector(".request_quote")!;
  btn.addEventListener("click", () => {
    window.location.href = "/contact";
  });

  document.addEventListener("DOMContentLoaded", () => {
    const hamburger = document.getElementById("hamburger")!;
    const dropdown = document.getElementById("dropdown")!;

    hamburger.addEventListener("click", () => {
      hamburger.classList.toggle("active");
      dropdown.classList.toggle("active");
    });
  });
</script>
<style lang="scss">
  header {
    position: sticky;
    top: 0;
    z-index: 1000;

    nav {
      padding: 0 4rem;
      display: flex;
      height: 72px;
      justify-content: space-between;
      align-items: center;
      border-top: 1px solid black;
      border-bottom: 1px solid black;
      background-color: white;

      .desktop_links {
        display: flex;

        a {
          padding: 0 1rem;
          align-content: center;
          text-decoration: none;
          color: black;
        }

        button {
          margin-left: 1rem;
          width: 160px;
          height: 40px;
          font-size: 16px;
          background-color: #000000;
          color: white;
          border-radius: 5px;

          &:hover {
            cursor: pointer;
          }
        }
      }

      .hamburger_menu {
        display: flex;
        flex-direction: column;
        justify-content: space-between;
        height: 20px;
        width: 25px;
        cursor: pointer;
        position: relative;

        .line {
          width: 100%;
          height: 3px;
          background-color: black;
          transition: all 0.3s ease-in-out;
        }

        &.active .line1 {
          transform: rotate(45deg) translateY(12px);
        }

        &.active .line2 {
          opacity: 0;
        }

        &.active .line3 {
          transform: rotate(-45deg) translateY(-12px);
        }
      }
    }

    .dropdown_menu {
      display: flex;
      flex-direction: column;
      position: absolute;
      width: 100%;
      top: 72px;
      left: -100%;
      background-color: white;
      transition: all 0.7s ease-in-out;

      &.active {
        left: 0;
      }

      .links {
        display: flex;
        flex-direction: column;
        align-items: center;

        a {
          padding: 10px 20px;
          text-decoration: none;
          color: black;
          text-align: center;
          width: 100%;

          &:last-child {
            border-bottom: none;
          }
        }

        button {
          width: 160px;
          height: 40px;
          font-size: 16px;
          background-color: #000000;
          color: white;
          border-radius: 5px;
          margin: 1rem 0;

          &:hover {
            cursor: pointer;
          }
        }
      }

      .informations {
        display: flex;
        flex-direction: column;
        align-items: center;

        div {
          width: 80%;
          text-align: center;
          padding: 0.5rem 0;
        }
      }
    }
  }

  @media (max-width: 1024px) {
    header nav .desktop_links {
      display: none;
    }
  }

  @media (min-width: 1024px) {
    header nav .hamburger_menu {
      display: none;
    }
  }
</style>
