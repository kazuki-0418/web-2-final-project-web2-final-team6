---
import { Image } from "astro:assets";
const { img, imgAlt, memberName, icons, isHidden } = Astro.props;
---
<div class={isHidden ? 'hidden-team-member' : 'team-member'}>
  <Image src={img} alt={imgAlt} width={300} />
  <div class="team-member-info">
    <h3>{memberName}</h3>
    <p class="team-member-description">
      Lorem ipsum dolor sit amet, consectetur adipiscing elit. Suspendisse
      varius enim in eros elementum tristique.
    </p>
    <div class="icons">
      {
        icons.map((icon: { icon: string; link: string }) => (
          <Image class="icon" src={icon.icon} alt={icon.link} width={50} height={50} />
        ))
      }
    </div>
  </div>
</div>
<style>
  @import url("https://fonts.googleapis.com/css2?family=Roboto:ital,wght@0,100;0,300;0,400;0,500;0,700;0,900;1,100;1,300;1,400;1,500;1,700;1,900&display=swap");
  main {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 20px;
    padding: 20px;
  }

  .hidden-team-member, .team-member {
    display: flex;
    flex-direction: row;
    gap: 20px;
    padding: 20px;
  }

  h3 {
    display: flex;
    flex-direction: column;
    font-family: "Roboto", sans-serif;
    font-size: 1.5rem;
    margin-bottom: 0;
  }

  .team-member-info {
    display: flex;
    flex-direction: column;
    justify-content: center;
  }

  .icons {
    display: flex;
    gap: 10px;
  }

  .icon {
      width: 24px;
      height: 24px;
  }

  img {
    border-radius: 20px;
  }

  @media (max-width: 1024px) {
    .hidden-team-member, .team-member {
      flex-direction: column;
      align-items: center;
    }

    .team-member-info {
      align-items: center;
    }

    .team-member-description {
      text-align: center;
      max-width: 300px;
    }
  }
</style>
